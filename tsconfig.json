{
  "compilerOptions": {
    "allowJs": true,
    "module": "System",
    "target": "ES6",
    "strict": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "listFiles": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "lib": [
      "ES6"
    ],
    "outFile": "./dist/phoenix.js",
    "rootDirs": [
      "./config",
      "./helpers",
      "./magic",
      "./shortcuts",
    ],
  },
  "typeAcquisition": {
    "enable": true
  },
  "files": [
    "./phoenix.js"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
  ]
}